<div id="showblog-list">
      <% @requests.each do |request| %>
    <table class="horizontal_table" style="width: 100%; height: 10px;" border="1" cellspacing="0">
<tbody>
<tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>" >

    <td width="25%"><%= request.date %></td>
        <td width="25%"><%= request.spec %></td>
        <td width="30%"><%= request.note %></td>
        <td width="10%"><%= link_to 'Add a horse', request %></td>
        <td width="5%"><%= link_to 'Edit', edit_request_path(request) %></td>
        <td width="5%"><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

